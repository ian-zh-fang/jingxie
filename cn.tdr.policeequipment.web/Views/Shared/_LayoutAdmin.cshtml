<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link type="text/css" href="@Url.Content("~/Scripts/easyui/themes/bootstrap/easyui.css")" rel="stylesheet" />
    <link type="text/css" href="@Url.Content("~/Scripts/easyui/themes/icon.css")" rel="stylesheet" />
    <link type="text/css" href="@Url.Content("~/Content/common.css")" rel="stylesheet" />
</head>
<body class="easyui-layout">
    <div data-options="region:'west',collapsed:false" class="easyui-layout" style="width:220px">
        <div data-options="region:'north',collapsed:false" class="easyui-layout x-clear-border" style="min-height:120px;">
            <div data-options="region:'west',collapsed:false" class="x-clear-border" style="width:50%;">

            </div>
            <div data-options="region:'center'" class="x-clear-border">
                <div>
                    <a href="javascript:void(0)" class="easyui-menubutton" data-options="menu:'#x-userm'">用户管理</a>
                    <div id="x-userm" style="width:100px;">
                        <div>Help</div>
                        <div>Update</div>
                        <div>About</div>
                    </div>
                </div>
            </div>
        </div>
        <div data-options="region:'center'" class="x-clear-border">
            <div id="aa" class="easyui-accordion" style="">
                <div title="Title1" data-options="iconCls:'icon-save'" style="overflow:auto;padding:10px;">
                    <h3 style="color:#0099FF;">Accordion for jQuery</h3>
                    <p>
                        Accordion is a part of easyui framework for jQuery.
                        It lets you define your accordion component on web page more easily.
                    </p>
                </div>
                <div title="Title2" data-options="iconCls:'icon-reload',selected:true" style="padding:10px;">
                    content2
                </div>
                <div title="Title3">
                    content3
                </div>
            </div>
        </div>
    </div>
    <div data-options="region:'center'" class="easyui-layout x-clear-border">
        <div data-options="region:'north',collapsed:false" class="x-clear-border" style="min-height:80px;"></div>
        <div data-options="region:'center'" class="easyui-tabs x-clear-border">
            <div title="首页">
                <p style="margin-left:15px;">首页</p>
            </div>
            @for (int i = 0; i < 25; i++)
            {
                <div title="首页 @i" data-options="closable:true">
                    <p style="margin-left:15px;">首页 @i</p>
                </div>
            }
        </div>
    </div>

    <script type="text/javascript" src="@Url.Content("~/Scripts/easyui/jquery.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/easyui/jquery.easyui.min.js")"></script>
    @RenderBody()
</body>
</html>
